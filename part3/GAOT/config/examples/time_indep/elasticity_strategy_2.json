{
    "setup": {
        "seed": 42,
        "device": "cuda:0",
        "dtype": "torch.float32",
        "trainer_name": "static",
        "train": true,
        "test": false,
        "ckpt": false
    },

    "model": {
        "name": "goat",
        "tokenization": "random",
        "num_latent_tokens": 256,
        "resample_every_epoch": false,
        "sampling": "from_domain_points",
        "latent_tokens_size": [16, 16],
        "dynamic_radius": true,
        "dynamic_radius_k": 2,
        "dynamic_radius_alpha": 1.25,
        "debug_plot_radii": true,
        "debug_plot_dir": ".results/debug",
        "debug_plot_domain": [[-1.0, -1.0], [1.0, 1.0]],
        "args": {
            "magno": {
                "coord_dim": 2,
                "hidden_size": 64,
                "mlp_layers": 3,
                "lifting_channels": 64,
                "precompute_edges": true
            },
            "transformer": {
                "patch_size": 1, 
                "hidden_size": 256
            }
        }
    },


    "dataset": {
        "name": "Elasticity",
        "metaname": "elliptic_pdes/Elasticity",
        "base_path": "data/part3/",
        "train_size": 1024,
        "val_size": 128,
        "test_size": 256,
        "batch_size": 64,
        "num_workers": 2,
        "shuffle": true
    },

    "optimizer": {
        "name": "adamw",
        "args": {
            "lr": 8e-4,
            "weight_decay": 1e-05,
            "epoch": 100,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "mix",
            "max_lr": 1e-3,
            "min_lr": 1e-4,
            "final_lr": 5e-5
        }
    },

    "path": {
        "ckpt_path": ".ckpt/examples/time_indep/elasticity.pt",
        "loss_path": ".loss/examples/time_indep/elasticity.png",
        "result_path": ".results/examples/time_indep/elasticity.png",
        "database_path": ".database/examples/time_indep/elasticity.csv"
    }
}